{% extends 'base.html.twig' %}

{% block title %}shop{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        {% for products in product %}
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    {% for image in images %}
                        {% if products.id == image.id %}
                            <img style="height: 250px"  src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="{{ products.productName }}" />
                        {% endif %}
                    {% endfor %}
                    <div class="card-header">
                        <div class="card-title">{{ products.productName }}</div>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ products.productDescription }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a class="btn btn-sm btn-outline-secondary" href="cart/add/{{ products.id }}">add to cart</a>

                            </div>
                            <h5 class="text-muted">{{ products.productPrice }}</h5>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
